<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Home Page</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow">
        <div class="container-fluid">

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/list">List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/add">Add student</a>
                    </li>
                </ul>
                <div class="d-grid gap-2 d-md-block">
                    <a class="btn btn-dark" href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container my-4 mx-5">
        <a class="btn btn-info btn-lg" href="/add">Add student</a>
    </div>
    <div class="container mx-5">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Profile Pic</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone no.</th>
                    <th scope="col">Semester</th>
                    <th scope="col">Course</th>
                    <th scope="col">M1</th>
                    <th scope="col">M2</th>
                    <th scope="col">M3</th>
                    <th scope="col">Percentage</th>
                    <th scope="col">Result</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <% studs.forEach(function(s) { %>
                <tr>
                    <td><img height="80" width="110" src="<%=s.img%>" /></td>
                    <td><%=s.name%></td>
                    <td><%=s.email%></td>
                    <td><%=s.phno%></td>
                    <td><%=s.sem%></td>
                    <td><%=s.course%></td>
                    <td><%=s.m1%></td>
                    <td><%=s.m2%></td>
                    <td><%=s.m3%></td>
                    <% if(s.per>35){ %>
                    <td style="color:green;"><b><%=s.per%> %</b></td>
                    <td style="color:green;"><b>PASS</b></td>
                    <%} else{ %>
                    <td style="color:red;"><b><%=s.per%> %</b></td>
                    <td style="color:red;"><b>FAIL</b></td>
                    <% }%>
                    <td>
                        <a class="btn btn-primary" href="/update/<%=s._id%>"><i class="fa fa-edit"></i> Edit</a>
                    </td>
                    <td><a class="btn btn-danger" href="/delete/<%=s._id%>"
                            onclick="return confirm('Are you sure about the deletion request?');"><i
                                class="fa fa-trash"></i> Delete</a></td>
                </tr>
                <% }); %>
                
            </tbody>
        </table>
    </div>
</body>
</html>